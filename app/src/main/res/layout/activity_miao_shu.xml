<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="text.bwie.mabiao.kuangjia.MiaoShuActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:src="@mipmap/yanhua"
        android:id="@+id/ii"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        >
        <LinearLayout
            android:id="@+id/fengmian_tui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_geren_zuojiantou"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/xiaoyuhao"
           />
        <TextView
            android:id="@+id/tv_fanhui"
            android:layout_marginLeft="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        </LinearLayout>
        <TextView
            android:text="预览"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="@dimen/y150"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/fengmian_huan"
            android:layout_width="@dimen/x120"
            android:layout_height="@dimen/x120"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@mipmap/fm" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_below="@+id/ii"
        android:background="#8DA1F0"
        android:id="@+id/ll"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/yuantu"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tupian"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="原图"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/laotupian"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tupian"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="老照片"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/dipian"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tupian"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="底片"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/fudiao"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/tupian"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="浮雕"
                android:textColor="@color/white"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:background="#A2DEFA">
        <EditText
            android:id="@+id/fengmian_ed_content"
            android:hint="点击输入视频简介"
            android:textColorHint="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@null"/>
        <Button
            android:id="@+id/fengmian_bt_fb"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#29B6F6"
            android:text="发布"
            android:textColor="#fff"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>



</RelativeLayout>
