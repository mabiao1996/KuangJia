<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="text.bwie.mabiao.kuangjia.SheZhiActivity">
    <RelativeLayout
        android:id="@+id/rl_x"
        android:background="@color/colorXuanZi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/ll_zuo"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/xiaoyuhao"
                />
            <TextView
                android:textSize="@dimen/x14"
                android:textColor="@color/colorBaiSe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返回"
                />
        </LinearLayout>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textColor="@color/colorBaiSe"
                android:textSize="@dimen/x14" />
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/rl_x"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="@dimen/y6"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <text.bwie.mabiao.kuangjia.comment.CircleRoundImageView
                android:layout_marginLeft="@dimen/x10"
                android:id="@+id/shezhi_tou"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/y40"
                android:src="@mipmap/weidenglu"
                />
            <TextView
                android:id="@+id/shezhi_nicheng"
                android:layout_marginLeft="@dimen/x15"
                android:textSize="@dimen/x15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登陆账号"
                />

        </LinearLayout>
        <LinearLayout
            android:background="@color/colorBaiSe"
            android:layout_marginTop="@dimen/y6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_margin="@dimen/x10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:orientation="horizontal"
                >
                <TextView
                    android:textSize="@dimen/x15"
                    android:textColor="@color/colorWeiXuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/x15"
                        android:textColor="@color/colorWeiXuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.1.1"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:textSize="@dimen/x15"
                        android:textColor="@color/colorWeiXuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        />
                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:layout_marginLeft="@dimen/x25"
                    android:background="@color/colorWeiXuan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1">
                </TextView>
            <LinearLayout
                android:layout_margin="@dimen/x10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:orientation="horizontal"
                >
                <TextView
                    android:textSize="@dimen/x15"
                    android:textColor="@color/colorWeiXuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:textSize="@dimen/x15"
                        android:textColor="@color/colorWeiXuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/colorBaiSe"
            android:layout_marginTop="@dimen/y6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_margin="@dimen/x10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:orientation="horizontal"
                >
                <TextView
                    android:textSize="@dimen/x15"
                    android:textColor="@color/colorWeiXuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于一刻钟"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:textSize="@dimen/x15"
                        android:textColor="@color/colorWeiXuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="@dimen/x25"
                android:background="@color/colorWeiXuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1">
            </TextView>
            <LinearLayout
                android:layout_margin="@dimen/x10"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y20"
                android:orientation="horizontal"
                >
                <TextView
                    android:textSize="@dimen/x15"
                    android:textColor="@color/colorWeiXuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/x15"
                        android:textColor="@color/colorWeiXuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128M"
                        />
                    <TextView
                        android:layout_marginLeft="@dimen/x10"
                        android:textSize="@dimen/x15"
                        android:textColor="@color/colorWeiXuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/y12"
            android:gravity="center"
            android:background="@drawable/yuanjiaologo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30">
            <TextView
                android:id="@+id/tv_td"
                android:textColor="@color/colorBaiSe"
                android:textSize="@dimen/x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出登录"
                />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
