<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="text.bwie.mabiao.kuangjia.RegisterActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/mi"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/y15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img_t"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y30"
            android:src="@mipmap/xiaoyuhao"
            />
        <TextView
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_yy"
            android:layout_marginRight="@dimen/x15"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorWeiXuan"
            android:textSize="@dimen/x15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号？"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/img_yang"
        android:layout_marginTop="@dimen/y50"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/y70"
        android:src="@mipmap/logo"
        />

    <LinearLayout
        android:id="@+id/ll_t"
        android:gravity="center"
        android:background="@drawable/yuanjiaokuang"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y60"
        android:layout_below="@+id/img_yang"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginBottom="@dimen/y6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/ed_zh"
                android:textColorHint="@color/colorWeiXuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                />
        </LinearLayout>
        <View
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/colorWeiXuan"
            ></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginTop="@dimen/y6"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/ed_mm"
                android:textColorHint="@color/colorWeiXuan"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_zuche"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y20"
        android:background="@color/colorHuang"
        android:layout_below="@id/ll_t"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y30">
        <TextView
            android:id="@+id/tv_denglu"
            android:textColor="@color/colorBaiSe"
            android:textSize="@dimen/x16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_q"
        android:gravity="right"
        android:layout_marginTop="@dimen/y8"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_zuche"
        android:layout_width="@dimen/x250"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/x13"
            android:textColor="@color/colorWeiXuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/y15"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll_q"
        android:layout_width="@dimen/x250"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_y"
            android:textSize="@dimen/x15"
            android:textColor="@color/colorWeiXuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客登录"
            />
    </LinearLayout>



</RelativeLayout>
