<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100">
<ImageView
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@mipmap/drawerlayout_background"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >
        <LinearLayout
            android:id="@+id/ll_xia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <text.bwie.mabiao.kuangjia.comment.CircleRoundImageView
            android:id="@+id/cv_tou"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/y40"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/weidenglu" />
           <TextView
               android:id="@+id/tv_nicheng"
               android:layout_marginTop="@dimen/y8"
               android:layout_weight="1"
               android:layout_marginLeft="@dimen/x10"
               android:textSize="@dimen/x15"
               android:textColor="@color/colorBaiSe"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="椰汁奶茶"
               />
              <ImageView
                  android:layout_gravity="center"
                  android:layout_width="@dimen/x20"
                  android:layout_height="@dimen/y20"
                  android:src="@mipmap/sex"
                  />
        </LinearLayout>
            <TextView
                android:textColor="@color/colorBaiSe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑个性签名"
                />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/left_ll_guanzhu"
            android:clickable="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginTop="@dimen/y25"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499933216"
                />

            <TextView
                android:textColor="@color/colorHei"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x16"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的关注"
                />
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499943790"
                />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499947358"
                />

            <TextView
                android:textColor="@color/colorHei"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x16"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的收藏"
                />
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499943790"
                />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499946865"
                />

            <TextView
                android:textColor="@color/colorHei"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x16"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索好友"
                />
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499943790"
                />
        </LinearLayout>
        <LinearLayout
            android:clickable="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y20"
            android:orientation="horizontal"
            android:background="?android:attr/selectableItemBackground"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499947389"
                />

            <TextView
                android:textColor="@color/colorHei"
                android:layout_marginLeft="@dimen/x10"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/x16"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消息通知"
                />
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/y20"
                android:src="@mipmap/raw_1499943790"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--倒数第二布局-->
        <LinearLayout
            android:layout_marginBottom="@dimen/y8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_marginRight="@dimen/x5"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/y20"
                    android:src="@mipmap/yueliangwanshang"
                    />
                <TextView
                    android:layout_marginRight="@dimen/x10"
                    android:textColor="@color/colorHei"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="夜间模式"
                    />
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
               <ch.ielse.view.SwitchView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            </LinearLayout>


        </LinearLayout>
        <!--最下面布局-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
           <ImageView
               android:layout_width="@dimen/x30"
               android:layout_height="@dimen/y30"
               android:src="@mipmap/raw_1499947056"
               />
            <TextView
                android:textColor="@color/colorHei"
                android:textSize="@dimen/x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的作品"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_shezhi"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="36dp"
                android:layout_height="56dp"
                android:src="@mipmap/raw_1499947157" />
            <TextView
                android:textColor="@color/colorHei"
                android:textSize="@dimen/x16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>